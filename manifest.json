{
    "manifest_version": 3,
    "name": "クラス名オーバーレイ表示",
    "version": "1.0",
    "description": "ページ内の要素にマウスオーバーするとクラス名をオーバーレイで表示します",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "クラス名オーバーレイ表示"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}